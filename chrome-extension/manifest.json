{
  "manifest_version": 3,
  "name": "Scrum Vote - Jira Bridge",
  "version": "1.0.0",
  "description": "Extension pour connecter Scrum Vote avec Jira - Contourne les restrictions CORS",
  "author": "Scrum Vote Team",

  "permissions": [
    "storage",
    "cookies",
    "activeTab"
  ],

  "host_permissions": [
    "https://jira.urssaf.recouv/*",
    "http://localhost:*/*",
    "https://localhost:*/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Scrum Vote - Jira Bridge"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "http://localhost:*/*",
        "https://localhost:*/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],

  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://localhost:*/*"
    ]
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
